<table class="table">
  <tr>
    <th>Title</th>
    <th>Icon</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @menus.each do |menu| %>
  <tr>
    <td><%= menu.title %></td>
    <td><%= menu.icon %></td>
    <td><%= menu.url %></td>
    <td><%= link_to 'Show', menu,class: "btn btn-success btn-xs" %></td>
    <td><%= link_to 'Edit', edit_menu_path(menu),class: "btn btn-warning btn-xs" %></td>
    <td><%= link_to 'Destroy', menu,class: "btn btn-danger btn-xs", method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

