<ul id='menu'>
    <li class="">
      <a href="<%= @menu.url %>">
        <%= icon(@menu.icon) %>
        <span class="link-title">&nbsp;<%= @menu.title %></span>
        <% if !@menu.submenus.empty? %>
          <span class="fa arrow"></span>
        <% end %>
      </a>
      <ul>
        <% @menu.submenus.each do |submenu| %>
          <li class="">
            <a href="<%= edit_submenu_path(submenu) %>">
              <%= icon(submenu.icon) %>
              <span>&nbsp;<%= submenu.title %></span>
            </a>
            <%= link_to '删除', submenu, method: :delete, data: { confirm: 'Are you sure?' } %>
          </li>
        <% end %>
      </ul>
    </li>
</ul>
<h2>Add a submenu:</h2>
<%= form_for([@menu, @menu.submenus.build]) do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :icon %><br />
    <%= f.text_field :icon,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :url %><br />
    <%= f.text_field :url,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= submit_tag "Submit", class: "btn btn-primary btn-sm" %>
  </div>
<% end %>
<%= link_to 'Back', menus_path %>
